{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Infix",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#declarations"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#strings"
		},

		{
			"include": "#parameter-references"
		},
		{
			"include": "#type-references"
		},
		{
			"include": "#identifiers"
		},
		{
			"include": "#punctuation"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line.hash.infix",
					"begin": "#",
					"end": "$"
				},
				{
					"name": "comment.line.double-slash.infix",
					"begin": "//",
					"end": "$"
				},
				{
					"name": "comment.block.infix",
					"begin": "/\\*",
					"end": "\\*/"
				}
			]
		},
		"declarations": {
			"patterns": [
				{
					"name": "meta.function.declaration.infix",
					"begin": "\\b(function)(?:\\[[^\\]]*\\])?\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
					"beginCaptures": {
						"1": { "name": "keyword.declaration.infix" },
						"2": { "name": "entity.name.function.declaration.infix" }
					},
					"end": "\\)",
					"patterns": [
						{
							"name": "variable.parameter.infix",
							"match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=:)"
						},
						{
							"include": "#type-references"
						},
						{
							"include": "#comments"
						}
					]
				},
				{
					"name": "meta.function.infix.declaration.infix",
					"match": "\\b(function)(?:\\[[^\\]]*\\])?\\s+\\(([^:]+):\\s*([^)]+)\\)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s+\\(",
					"captures": {
						"1": { "name": "keyword.declaration.infix" },
						"2": { "name": "variable.parameter.infix" },
						"3": { "name": "variable.other.infix" },
						"4": { "name": "entity.name.function.declaration.infix" }
					}
				},
				{
					"name": "meta.struct.declaration.infix",
					"match": "\\b(struct)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\b",
					"captures": {
						"1": { "name": "keyword.declaration.infix" },
						"2": { "name": "entity.name.type.declaration.infix" }
					}
				},
				{
					"name": "meta.type.declaration.infix",
					"match": "\\b(type)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\b",
					"captures": {
						"1": { "name": "keyword.declaration.infix" },
						"2": { "name": "entity.name.type.declaration.infix" }
					}
				},
				{
					"name": "meta.module.declaration.infix",
					"match": "\\b(module)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\b",
					"captures": {
						"1": { "name": "keyword.declaration.infix" },
						"2": { "name": "entity.name.namespace.declaration.infix" }
					}
				},
				{
					"name": "meta.variable.declaration.infix",
					"match": "\\b(let|var)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\b",
					"captures": {
						"1": { "name": "keyword.declaration.infix" },
						"2": { "name": "variable.name.declaration.infix" }
					}
				}
			]
		},

		"variable-references": {
			"patterns": [
				{
					"name": "variable.other.infix",
					"match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.declaration.infix",
					"match": "\\b(struct|module|function|type|let|var|use)\\b"
				},
				{
					"name": "storage.modifier.infix",
					"match": "\\b(private)\\b"
				}
			]
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.arithmetic.infix",
					"match": "\\+|\\-|\\*|/|%|\\*\\*"
				},
				{
					"name": "keyword.operator.comparison.infix",
					"match": "==|!=|<|>|<=|>=|<=>|===|!=="
				},
				{
					"name": "keyword.operator.logical.infix",
					"match": "&&|\\|\\||!"
				},
				{
					"name": "keyword.operator.bitwise.infix",
					"match": "&|\\||\\^|~|<<|>>"
				},
				{
					"name": "keyword.operator.assignment.infix",
					"match": "=|\\+=|\\-=|\\*=|/=|%=|&=|\\|=|\\^=|<<=|>>="
				},
				{
					"name": "keyword.operator.increment.infix",
					"match": "\\+\\+|\\-\\-"
				},
				{
					"name": "keyword.operator.ternary.infix",
					"match": "\\?|:"
				},
				{
					"name": "keyword.operator.member.infix",
					"match": "\\.|::|\\->"
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric.hex.infix",
					"match": "\\b0[xX][0-9a-fA-F]+([uU]?[lL]?|[lL]?[uU]?)\\b"
				},
				{
					"name": "constant.numeric.octal.infix",
					"match": "\\b0[0-7]+([uU]?[lL]?|[lL]?[uU]?)\\b"
				},
				{
					"name": "constant.numeric.binary.infix",
					"match": "\\b0[bB][01]+([uU]?[lL]?|[lL]?[uU]?)\\b"
				},
				{
					"name": "constant.numeric.float.infix",
					"match": "\\b([0-9]+\\.[0-9]*([eE][+-]?[0-9]+)?[fFdD]?|\\.[0-9]+([eE][+-]?[0-9]+)?[fFdD]?|[0-9]+[eE][+-]?[0-9]+[fFdD]?|[0-9]+[fFdD])\\b"
				},
				{
					"name": "constant.numeric.decimal.infix",
					"match": "\\b[0-9]+([uU]?[lL]?|[lL]?[uU]?)\\b"
				}
			]
		},
		"strings": {
			"patterns": [
				{
					"name": "string.quoted.double.infix",
					"begin": "\"",
					"end": "\"",
					"patterns": [
						{
							"name": "constant.character.escape.infix",
							"match": "\\\\([\\\\\"/bfnrt]|u[0-9a-fA-F]{4})"
						},
						{
							"name": "invalid.illegal.escape.infix",
							"match": "\\\\."
						}
					]
				},
				{
					"name": "string.quoted.single.infix",
					"begin": "'",
					"end": "'",
					"patterns": [
						{
							"name": "constant.character.escape.infix",
							"match": "\\\\([\\\\\\'/bfnrt]|u[0-9a-fA-F]{4})"
						},
						{
							"name": "invalid.illegal.escape.infix",
							"match": "\\\\."
						}
					]
				},
				{
					"name": "string.quoted.backtick.infix",
					"begin": "`",
					"end": "`",
					"patterns": [
						{
							"name": "constant.character.escape.infix",
							"match": "\\\\."
						}
					]
				}
			]
		},
		"parameter-references": {
			"patterns": [
				{
					"name": "variable.parameter.infix",
					"match": "(?<=\\()\\s*([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=:)"
				},
				{
					"name": "variable.parameter.infix",
					"match": "(?<=,)\\s*([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=:)"
				}
			]
		},
		"type-references": {
			"patterns": [
				{
					"name": "entity.name.type.reference.infix",
					"match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
				}
			]
		},
		"identifiers": {
			"patterns": [
				{
					"name": "variable.other.infix",
					"match": "\\b[a-z_][a-zA-Z0-9_]*\\b"
				}
			]
		},
		"punctuation": {
			"patterns": [
				{
					"name": "punctuation.terminator.infix",
					"match": ";"
				},
				{
					"name": "punctuation.separator.infix",
					"match": ","
				},
				{
					"name": "punctuation.section.brackets.infix",
					"match": "[\\[\\]]"
				},
				{
					"name": "punctuation.section.parens.infix",
					"match": "[\\(\\)]"
				},
				{
					"name": "punctuation.section.braces.infix",
					"match": "[\\{\\}]"
				}
			]
		}
	},
	"scopeName": "source.infix"
}